<% provide(:title, 'Search') %>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1> Search page results </h1>

<div style='width: 800px;'>
  <div id="map" style='width: 1000px; height: 800px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({
    provider: {
      // disableDefaultUI: true
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    var key;
    var city_key;
    var city_list = [];
    var name_tweet = [];
    var name_coordinates = [];
    var name_to_lat = [];
    var name_to_lng = [];

    name_tweet["Montreal, Canada"] = "<%= @tweets["Montreal, Canada"] %>";
    name_tweet["Toronto, Canada"] = "<%= @tweets["Toronto, Canada"] %>";

    name_coordinates["Montreal, Canada"] = "45.5086699,-73.5539925";
    name_coordinates["Toronto, Canada"] = "43.6532260,-79.3831843";

    // /*parsing for lat */
     name_to_lat["Montreal, Canada"] = 45.5086699;
     name_to_lat["Toronto, Canada"] = 43.6532260;

    // /*parsing for lng */
     name_to_lng["Montreal, Canada"] = -73.5539925;
     name_to_lng["Toronto, Canada"] = -79.3831843;

     //5/13: Challenge remains to pass arrays from controller to view(js). Can only display hard-coded


    var marker_array = [];

    for (key in name_tweet){
      marker_array.push({
        "lat": name_to_lat[key],
        "lng": name_to_lng[key],
        "picture": {
          "url": "http://chart.apis.google.com/chart?chst=d_map_pin_letter&chld=%E2%80%A2%7CFE7569",
          "width":  50,
          "height": 50
        },
        "infowindow": name_tweet[key]
      });
    }
    markers = handler.addMarkers(marker_array);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  }
);
</script>

<br></br>

<ul>
	<% @tweets.each do |key, value| %>
		<li> <span style="font-size:20px"> <%= key %> : <%= value %> </span> </li>
	<% end %>
	<% if ((defined? @weird_lat) || (defined? @weird_lng)) %>
	 	<li> Weird Latitude: <%= @weird_lat %> </li>
	 	<li> Weird Latitude Class: <%= @weird_lat.class %>
	 	<li> Weird Longitude: <%= @weird_lng %> </li>
	 	<li> Weird Longitude Class: <%= @weird_lng.class %>
	 <% end %>
</ul>
