<div class="center hero-unit">
	<!-- center hero-unit has special meaning in bootstrap -->
	<h1>Welcome to Tweetaround!</h1>
	<h3> Type in a hashtag to see what people are talking about around the world! Add 2 more cities, if you wish, to see what people are talking about there!</h3>

	<%= form_tag("/search", method: "get") do %>
  	<%= label_tag(:q, "Search for hashtag:") %>
  	<%= text_field_tag(:q) %>
  	<%= label_tag(:location, "Location: (Optional)") %>
  	<%= text_field_tag(:location)%>
    <%= label_tag(:location1, "Second Location: (Optional)") %>
    <%= text_field_tag(:location1, placeholder="Toronto, Canada")%>
  	<br></br>
  	<%= submit_tag "Search", "data-no-turbolink" => true %>
	<% end %>

</div>